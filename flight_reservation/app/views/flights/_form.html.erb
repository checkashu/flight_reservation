<%= render 'shared/errors', obj: @flight %>
<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@flight, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :number %>
        </div>
        <div class="col-sm-8">
          <%= f.number_field :number, class: "form-control", placeholder: "Flight Number", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :origin %>
        </div>
        <div class="col-sm-8">    
          <%= f.text_field :origin, class: "form-control", placeholder: "Origin of Flight" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :destination %>
        </div>
        <div class="col-sm-8">    
          <%= f.text_field :destination, class: "form-control", placeholder: "Destination of Flight" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :datetime %>
        </div>
        <div class="col-sm-8">    
          <%= f.datetime_local_field :datetime, class: "form-control", placeholder: "Date & Time of Flight" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :price %>
        </div>
        <div class="col-sm-8">    
          <%= f.number_field :price, class: "form-control", placeholder: "Price of Flight" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
      <% end %>
      <div class="col-xs-4 col-xs-offset-4">
        [ <%= link_to "Cancel and Back to flights list", flights_path %> ]
      </div>
   </div>
</div>