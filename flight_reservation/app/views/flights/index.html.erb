<h1 align="center">Showing all Flights</h1>
  <% @flights.each do |flight| %>
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="well well-lg">
          <div class="flight-number">
            <%= link_to flight.number, flight_path(flight) %>
              </div>
                <div class="flight-body">
                  <%= (flight.origin) %>
                </div>
                <div class="flight-body">
                  <%= (flight.destination) %>
                </div>
                <div class="flight-body">
                  <%= (flight.datetime) %>
                </div>
                <div class="flight-body">
                  <%= (flight.price) %>
                </div>
                <div class="flight-actions">
              <%= link_to "Edit this flight", edit_flight_path(flight), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete this flight", flight_path(flight), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
