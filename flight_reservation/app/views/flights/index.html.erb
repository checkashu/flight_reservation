<h1>Showing all Flights</h1>
  <p>
    <%= link_to "Add new Flight", new_flight_path %>
  </p>

  <table>
    <tr>
      <th>Title</th>
      <th>Description</th>
    </tr>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.number %></td>
        <td><%= flight.origin %></td>
        <td><%= flight.destination %></td>
        <td><%= flight.date %></td>
        <td><%= flight.time %></td>
        <td><%= flight.price %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Show', flight_path(flight) %></td>
        <td><%= link_to 'Delete', flight_path(flight), method: :delete, data: {confirm: "You sure?"} %></td>
      </tr>
    <% end %>

  </table>

